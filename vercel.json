{
    "version": 2,
    "builds": [
      { "src": "fluffy-server/index.js", "use": "@vercel/node" },
      { "src": "fluffy-web/dist/**", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "fluffy-server/index.js" },
      { "src": "/(.*)", "dest": "fluffy-web/dist/$1" }
    ]
  }